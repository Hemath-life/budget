{
  "name": "@repo/monorepo",
  "version": "0.0.0",
  "description": "Personal finance and budget management app - Turborepo monorepo",
  "private": true,
  "type": "module",
  "license": "MIT",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "turbo watch dev",
    "build": "turbo build",
    "start": "turbo start",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo lint -- --cache --cache-location .cache/.eslintcache --fix",
    "format": "turbo format -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo format -- --cache --cache-location .cache/.prettiercache --write",
    "check": "turbo lint typecheck",
    "clean": "turbo clean",
    "clean:all": "turbo clean && git clean -xdf .cache .turbo node_modules",
    "db:studio": "turbo studio -F @repo/api",
    "db:push": "turbo push -F @repo/api",
    "knip": "knip",
    "ui-add": "turbo ui-add -F @repo/ui --",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "husky": "^9.1.7",
    "knip": "^5.64.0",
    "lint-staged": "^16.2.7",
    "turbo": "^2.6.2"
  },
  "lint-staged": {
    "apps/api/**/*.ts": [
      "prettier --write"
    ],
    "apps/web/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "packages/ui/**/*.{ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
