{
  "name": "@repo/monorepo",
  "description": "Personal finance and budget management app - Turborepo monorepo",
  "private": true,
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "turbo build",
    "clean": "turbo clean",
    "postclean": "git clean -xdf .cache .turbo node_modules",
    "dev": "turbo watch dev",
    "format": "turbo format -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo format -- --cache --cache-location .cache/.prettiercache --write",
    "lint": "turbo lint -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo lint -- --cache --cache-location .cache/.eslintcache --fix",
    "start": "turbo start",
    "typecheck": "turbo typecheck",
    "ui-add": "turbo ui-add -F @repo/ui --"
  },
  "devDependencies": {
    "knip": "^5.64.0",
    "turbo": "^2.6.2"
  }
}
