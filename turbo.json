{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_*",
    "NEXT_PUBLIC_*",
    "PUBLIC_*"
  ],
  "globalPassThroughEnv": ["npm_lifecycle_event"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "tsconfig*.json"],
      "outputs": ["dist/**", "build/**", ".next/**", "storybook-static/**"],
      "env": ["DATABASE_URL", "JWT_SECRET", "CORS_ORIGINS"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json"],
      "outputs": [".cache/tsbuildinfo.json", "tsconfig.tsbuildinfo"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "**/*.test.*", "**/*.spec.*"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".eslintrc*", "eslint.config.*"],
      "outputs": [".cache/.eslintcache"]
    },
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "clean": {
      "cache": false
    },
    "push": {
      "cache": false,
      "interactive": true,
      "env": ["DATABASE_URL"]
    },
    "studio": {
      "cache": false,
      "persistent": true
    },
    "ui-add": {
      "cache": false,
      "interactive": true
    },
    "postui-add": {
      "cache": false,
      "dependsOn": ["ui-add"]
    },
    "knip": {
      "cache": false,
      "inputs": ["knip.config.*", "package.json", "src/**"]
    },
    "storybook": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".storybook/**", "src/stories/**"],
      "outputs": ["storybook-static/**"]
    }
  }
}
